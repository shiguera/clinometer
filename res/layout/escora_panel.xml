            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/label_cabeceo_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/labelCabeceoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelCabeceoTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/label_cabeceo_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView
            android:id="@+id/imageCabeceoArco"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/labelCabeceoContent"
            android:contentDescription="@string/imageView2ContentDescription"
            android:padding="10dip"
            android:src="@drawable/boat1" 
