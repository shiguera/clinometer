<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <TextView
            android:id="@+id/labelEscoraTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/label_escora_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/labelEscoraContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelEscoraTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="@string/label_escora_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView
            android:id="@+id/imageEscoraArco"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/labelEscoraContent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imageView1ContentDescription"
            android:padding="10dip"
            android:src="@drawable/boat2" />

